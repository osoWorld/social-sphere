<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/onBoardingAnimation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lottie_rawRes="@raw/interact_with_world"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/onBoardingHeadingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interact with the world"
            android:textSize="24sp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_thin"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/onBoardingSubHeadingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interact with anyone and at anytime you want through our App"
            android:textAlignment="center"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/poppins_thin"
            android:textColor="@color/black"/>


    </LinearLayout>

</LinearLayout>